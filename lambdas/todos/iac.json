{
  "$schema": "../../.endaft/schemas/iac.lambda.schema.json",
  "description": "The API handler for todos.",
  "anonymous": false,
  "handler": "bootstrap",
  "runtime": "provided.al2",
  "architecture": "arm64",
  "file": "../.dist/lambda_todos.zip",
  "memory": 128,
  "timeout": 30,
  "environment": {
    "DATA_TABLE_NAME": "$DATA_TABLE_NAME"
  },
  "routes": [
    {
      "method": "GET",
      "path": "/todos"
    },
    {
      "method": "GET",
      "path": "/todos/{count}"
    },
    {
      "method": "GET",
      "path": "/todos/{count}/{token+}"
    },
    {
      "method": "POST",
      "path": "/todos"
    },
    {
      "method": "DELETE",
      "path": "/todos/{todoKey+}"
    }
  ]
}